
public class CriaConta {

	public static void main(String[] args) {
		
		Conta conta = new Conta();
		
		System.out.println("Saldo: " + conta.saldo);
		System.out.println("Depositou 300");
		conta.deposita(300);
		System.out.println("Saldo: " + conta.saldo);
		conta.saca(30);
		System.out.println("Sacou 30");
		System.out.println("Saldo: " + conta.saldo);
		
	}
	
}
