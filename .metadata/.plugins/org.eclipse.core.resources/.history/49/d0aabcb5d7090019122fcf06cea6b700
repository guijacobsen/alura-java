
public class CriaConta {

	public static void main(String[] args) {
		
		Conta contaDoPaulo = new Conta();
		
		System.out.println("Saldo: " + contaDoPaulo.saldo);
		System.out.println("Depositou 300");
		contaDoPaulo.deposita(300);
		System.out.println("Saldo: " + contaDoPaulo.saldo);
		if( contaDoPaulo.saca(30) ) {
			System.out.println("Conseguiu sacar 30");
		} else {
			System.out.println("Nao conseguiu sacar 30");
		}
		
		System.out.println("Saldo: " + contaDoPaulo.saldo);
		
	}

}
